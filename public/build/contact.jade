extends layout


block extrahead
    meta(name="title" content=title)
    meta(name="description" content=t('home.description'))
    meta(name="keywords" content=t('home.meta_keywords'))

    meta(property="og:title" content=title)
    meta(property="og:url" content="https://www.videoder.net")
    meta(property="og:type" content="website")
    meta(name="og:description" content=t('home.description'))

    meta(name="twitter:card" content="summary")
    meta(name="twitter:image" content="https://www.videoder.net/images/toolbar_icon.png")
    meta(name="twitter:image:alt" content="Videoder Icon")
    meta(name="twitter:site" content="@videoderandroid")
    meta(name="twitter:siteLid" content="@videoderandroid")
    meta(name="twitter:creator" content="@videoderandroid")
    meta(name="twitter:title" content=title)
    meta(name="twitter:description" content=t('home.description'))

    meta(name="robots" content="index,follow")

block content

    .container-fluid.how-to-page-house
        ._55px

        .instructions-house
            .contact-title= t('contact.title')
            .contact-subtitle= t('contact.subtitle')
            .black_separator
            .social-house
                .g-plusone.center-social(data-size="tall" data-annotation="bubble" data-href="http://www.videoder.net")
                ._15px
                .fb-like.center-social(data-href="https://www.facebook.com/videoder" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true")

            .instruction-item-house#contact-mail-support
                i.material-icons.tick-icon email
                .contact-text= t('contact.supportmail') + ' : support@videoder.com'
            .instruction-item-house#contact-mail-business
                i.material-icons.tick-icon email
                .contact-text= t('contact.businessmail') + ' : contact@videoder.com'
            .instruction-item-house#contact-facebook
                img.contact-social-icon(src="/images/icons/contact/fb.png")
                .contact-text fb.com/videoder
            .instruction-item-house#contact-twitter
                img.contact-social-icon(src="/images/icons/contact/twitter.png")
                .contact-text twitter/videoderandroid
            .instruction-item-house#contact-phone
                i.material-icons.tick-icon call
                .contact-text +91-859-164-7332

        ._22px
        +bottom
        ._55px.blue



        +toolbar
        +download-bottom-button




        script.
            $(function () {

                var title;
                $(".download_now_bottom_house").addClass('gone');
                $(".toolbar").addClass('smaller');
                $(".toolbar-text").addClass('smaller');
                $(".text-bold").text('');
                $(".toolbar-icon").addClass('smaller');
                $(".language-name").addClass('visible');
            });







