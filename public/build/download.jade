extends layout

block extrahead
    meta(http-equiv="refresh" content="1; url=https://raw.githubusercontent.com/videoder/main/master/videoder_version_11.apk")
    meta(name="title" content="Videoder Youtube Video & Music Downloader Android")
    meta(name="description" content=t('home.description'))
    meta(name="keywords" content=t('home.meta_keywords'))

    meta(property="og:title" content="Videoder Youtube Video & Music Downloader")
    meta(property="og:url" content="https://www.videoder.net")
    meta(property="og:type" content="website")
    meta(name="og:description" content=t('home.description'))

    meta(name="twitter:card" content="summary")
    meta(name="twitter:image" content="https://www.videoder.net/images/toolbar_icon.png")
    meta(name="twitter:image:alt" content="Videoder Icon")
    meta(name="twitter:site" content="@videoderandroid")
    meta(name="twitter:siteLid" content="@videoderandroid")
    meta(name="twitter:creator" content="@videoderandroid")
    meta(name="twitter:title" content=title)
    meta(name="twitter:description" content=t('home.description'))
    meta(name="robots" content="index,follow")

block content

    .container-fluid.download-page-house
        .download-title= t('download.title',{PLACEHOLDER: app_version})

        .social-house
            .g-plusone.center-social(data-size="tall" data-annotation="bubble" data-href="https://www.videoder.net")
            ._15px
            .fb-like.center-social(data-href="https://www.facebook.com/videoder" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true")

        .download-restart-house= t('download.download_did_no_start')
            a.download-restart(href="https://raw.githubusercontent.com/videoder/main/master/videoder_version_11.apk")= t('download.restart_download')


        +how-to-install-on-phone

        +why-dialog



        ._22px
