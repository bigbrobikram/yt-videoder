extends layout

block extrahead
    meta(name="title" content="Videoder Youtube Video & Music Downloader Android")
    meta(name="description" content=t('home.description'))
    meta(name="keywords" content=t('home.meta_keywords'))

    meta(property="og:title" content="Videoder Youtube Video & Music Downloader")
    meta(property="og:url" content="https://www.videoder.net")
    meta(property="og:type" content="website")
    meta(name="og:description" content=t('home.description'))

    meta(name="twitter:card" content="summary")
    meta(name="twitter:image" content="https://www.videoder.net/images/toolbar_icon.png")
    meta(name="twitter:image:alt" content="Videoder Icon")
    meta(name="twitter:site" content="@videoderandroid")
    meta(name="twitter:siteLid" content="@videoderandroid")
    meta(name="twitter:creator" content="@videoderandroid")
    meta(name="twitter:title" content=title)
    meta(name="twitter:description" content=t('home.description'))
    meta(name="robots" content="index,follow")

mixin search-item(video)
    .suggestion-item-search("videoId"=video.id.videoId)
        img.suggestion-image(src=video.snippet.thumbnails.medium.url alt="Download " + video.snippet.title + " MP3 and video free")
        .suggestion-bottom-house
            .suggestion-title #{video.snippet.title}
            .suggestion-uploader by #{video.snippet.channelTitle}



block content
    .container-fluid
        .search-items-house
            ._55px
            ._15px
            .input-div-search
                i.material-icons.search-icon
                    b search
                input.transparent-input-box#searchinput(placeholder=t('home.search_hint'),value=search_query, onkeypress='handleKeyPress(event)')
            ._22px
            -if(videos)
                -if(videos.length==0)
                    .search-error= t('search.no_results_found')

                .search-result-container
                    -each video in videos
                        +search-item(video)
            -if(error)
                .search-error= t('search.error_try_again')


            ._22px
            +bottom
            ._55px.blue

        +toolbar
        +download-bottom-button

        script.
            $(function () {

                var title;
                $(".download_now_bottom_house").addClass('gone');
                $(".toolbar").addClass('smaller');
                $(".toolbar-text").addClass('smaller');
                $(".text-bold").text('');
                $(".toolbar-icon").addClass('smaller');
                $(".language-name").addClass('visible');

            });







